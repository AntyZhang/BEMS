@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>主页</title>

    <link href="~/lib/bootstrap-3.3.7-dist/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/jquery-3.4.1.min.js"></script>
    <script src="~/lib/bootstrap-3.3.7-dist/js/bootstrap.js"></script>
    <link href="~/css/Login.css" rel="stylesheet" />
</head>
<body style="height:100%">

    <div>
        <div style="min-height:350px;background-color:#1086FC">

        </div>
        <div style="height:50%;background-color:white">

        </div>
    </div>
    <div class="siteName">
        <h1>@ViewBag.SiteName</h1>
    </div>
    <div class="Login_Box">
        <h3 class="Login_Title">用户登录</h3>
        <div class="form-group">
            
            <input type="text" class="form-control" id="user" style="display:inline;width:300px;" autocomplete="off" placeholder="用户名" />
        </div>
        <div class="form-group">
            @*<label for="password" style="display:inline;">密码：</label>*@
            <input type="text" class="form-control" id="password" style="display:inline;width:300px;" autocomplete="off" placeholder="密码" />
        </div>
        <div class="text-center" style="margin-top: 50px;">
            <button type="submit" class="btn btn-primary" style="width:100%" onclick="login()">登录</button>
        </div>
    </div>

    @*<script>
            var vm = new Vue({
