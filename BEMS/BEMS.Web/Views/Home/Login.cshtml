@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>主页</title>

    <link href="~/lib/bootstrap-3.3.7-dist/css/bootstrap.css" rel="stylesheet" />

    <link href="~/css/Login.css" rel="stylesheet" />
</head>
<body style="height:100%">

    <div>
        <div style="min-height:350px;background-color:#1086FC">
        </div>
    </div>
    <div class="siteName">
        <h1>@ViewBag.SiteName</h1>
    </div>
    <div class="LoginBox row">
        <h3>用户登录</h3>
        <div class="input-group" style="margin-bottom:20px">
            <span class="input-group-addon glyphicon glyphicon-user"></span>
            <input type="text" class="form-control" id="user" style="display:inline;" placeholder="用户名" />
        </div>
        <div class="input-group">
            <span class="input-group-addon glyphicon glyphicon-lock"></span>
            <input type="text" class="form-control" id="password" style="display:inline;" placeholder="密码" />
        </div>
        <div class="text-center" style="margin-top: 50px;">
            <button type="submit" class="btn btn-primary" style="width:100%" onclick="login()">登录</button>
        </div>
    </div>

    @*<script>
            var vm = new Vue({
                el: "",
                data: "",

            });
        </script>*@
</body>
</html>
